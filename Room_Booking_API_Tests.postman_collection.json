    {
      "name": "16. Room Availability Check",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/rooms/{{roomId}}/availability?date=2025-11-09&startTime=09:00&endTime=17:00",
          "host": ["{{baseUrl}}"],
          "path": ["api", "rooms", "{{roomId}}", "availability"],
          "query": [
            {
              "key": "date",
              "value": "2025-11-09"
            },
            {
              "key": "startTime",
              "value": "09:00"
            },
            {
              "key": "endTime",
              "value": "17:00"
            }
          ]
        }
